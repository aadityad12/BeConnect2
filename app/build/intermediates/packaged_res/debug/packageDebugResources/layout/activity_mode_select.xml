<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BeConnect"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Alert Distribution"
        android:textSize="15sp"
        android:layout_marginBottom="56dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_gateway"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Gateway Mode\n(Fetch &amp; Broadcast)"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_receiver"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Receiver Mode\n(Scan &amp; Display)"
        android:textAlignment="center"
        style="@style/Widget.Material3.Button.OutlinedButton" />

</LinearLayout>
